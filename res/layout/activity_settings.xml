<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Settings" >

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Advanced search options"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvImageSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvTitle"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="38dp"
        android:text="Image Size"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/llSearchValues"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvImageSize"
        android:layout_toRightOf="@+id/tvImageSize"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/spImageSize"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/size_array" />

        <Spinner
            android:id="@+id/spColorFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/color_array" />

        <Spinner
            android:id="@+id/spImageType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/type_array" />

        <EditText
            android:id="@+id/etSiteFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter site"
            android:textSize="20sp" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <TextView
        android:id="@+id/tvColorFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvImageSize"
        android:layout_below="@+id/tvImageSize"
        android:text="Color Filter"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvImageType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvColorFilter"
        android:layout_below="@+id/tvColorFilter"
        android:text="Image Type"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvSiteFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvImageType"
        android:layout_below="@+id/tvImageType"
        android:text="Site Filter"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llSearchValues"
        android:layout_centerHorizontal="true"
        android:text="Save"
        android:onClick="onSave"
        android:textSize="20sp" />

</RelativeLayout>